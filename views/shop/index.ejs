<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.firstname %></h1>
                    <h1 class="product__title"><%= product.lastname %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <p class="product__description"><%= product.currentlocation %></p>
                    <p class="product__description">شماره تماس:<%= product.phonenumber %></p>
                    <p class="product__description">شماره پلاک:<%= product.plaknumber %></p>
                    <p class="product__description">id :<%= product.id %></p>
                </div>
                <div class="card__actions">
                    <a href="/taxidriver/<%= product.id %>" class="btn">delete</a>
                    <a href="/edittaxidriver/<%= product.id %>" class="btn">edit</a>

                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>